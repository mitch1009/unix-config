# clears the terminal
alias c="clear"
# installs a new package with a --yes option"
alias i="sudo apt-get install -y"
# updates the system
alias u="sudo apt-get update "
# upgrades the system
alias up="sudo apt-get full-upgrade -y"
# reboots the system
alias rebut="sudo reboot now"
# runs sudo apt-get ... you dont need to type that over and over again
alias apg="sudo apt-get"
# make a new directory in the home
alias mkdh="mkdir ~/$1"
